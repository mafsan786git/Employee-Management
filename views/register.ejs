<style>
    @media screen and (min-width:600px) {
        .container {
            width: 55%;
        }
    }
</style>


<div class="container" style="border: solid black;">
    <div class="container-fliud d-flex justify-content-center">
        <h1><strong>Register Page</strong></h1>
    </div>
    <hr>
    <h4 class="form-text text-muted alert alert-danger">This is only for ADMIN registration.</h4>
    <hr>
    <% include ./partials/messages %>
    <form action="/admin/register" method="POST" class="was-validated">
        <div class="form-group">
            <label for=""><strong>First Name</strong></label>
            <input type="text" class="form-control form-control-sm" id="firstname" name="fname" placeholder="enter your first name" required>
        </div>
        <div class="form-group">
            <label for=""><strong>Last Name</strong></label>
            <input type="text" class="form-control form-control-sm" id="lastname" name="lname" placeholder="enter your last name" required>
        </div>
        <div class="form-group">
            <label><strong>Email</strong></label>
            <input type="email" class="form-control form-control-sm" id="email" name="email" placeholder="enter your email name" required>
            <small id="emailhelp" class="form-text text-muted alert alert-info">THIS EMAIL WILL BE YOUR USERNAME</small>
        </div>
        <div class="form-group">
            <label><strong>Gender</strong></label>
            <br>
            <div>
                <div class="form-check form-check-inline" style="padding: 2px">
                    <input type="radio" class="form-check-input" id="radiomale" name="gender" value="male" required>
                    <label class="form-check-lable" for="radiomale">Male</label>
                </div>
                <div class="form-check form-check-inline" style="padding: 2px">
                    <input type="radio" class="form-check-input" id="radiofemale" name="gender" value="female" required>
                    <label class="form-check-lable" for="radiofemale">Female</label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="pwd"><strong>New Password</strong></label>
            <input type="password" id="npwd" class="form-control form-control-sm" name="password" placeholder="enter your new password" required>
        </div>
        <div class="form-group">
            <label for="cpwd"><strong>Confirm Password</strong></label>
            <input type="password" id="cpwd" class="form-control form-control-sm" name="password2" placeholder="enter your current password" required>
        </div>
        <div class="form-group">
            <button type="submit" id="register" class="btn btn-primary" style="width: 100%">Sign Up</button>
        </div>
        <div class="form-group">
            <h5>Already have account ? <a href="/login">Log In</a></h5>
        </div>

    </form>
</div>